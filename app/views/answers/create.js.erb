<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
        $('.errors_list').html('<%= j message %>');
    <% end %>
<% else %>
  $('.answer_list').append('<%= j render @answer %>');
  $('.show_notice_alert').html("<%= render 'shared/notice_alert'%>");
  $("#answer_body").val('');
<% end %>